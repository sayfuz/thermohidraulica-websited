---
import { siteName } from "~/data/config";
import SocialMediaIcons from "./SocialMediaIcons.astro";
const year = new Date().getFullYear();
---

<footer class="bg-sky-700">
  <div class="container py-16">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8 items-center">
      <div>
        <a href="/">
          <div
            class="flex items-center gap-x-2 justify-center lg:justify-start"
          >
            <img
              src="src/assets/images/icons/Logotipo.svg"
              alt="Logo"
              class="h-10 lg:h-15"
            />
          </div>
        </a>
      </div>
      <div
        class="mt-16 grid grid-cols-1 sm:grid-cols-2 gap-8 xl:col-span-2 xl:mt-0"
      >
        <div
          class="md:grid md:grid-cols-2 md:gap-8 justify-items-center lg:justify-items-end"
        >
          <div>
            <a href="/"
              ><span class="text-base font-semibold text-white">Home</span></a
            >
          </div>
          <div class="max-md:mt-10">
            <a href="/about-us"
              ><span class="text-base font-semibold text-white">Nosotros</span
              ></a
            >
          </div>
        </div>
        <div
          class="md:grid md:grid-cols-2 md:gap-8 justify-items-center lg:justify-items-end"
        >
          <div>
            <a href="/services"
              ><span class="text-base font-semibold text-white">Servicios</span
              ></a
            >
          </div>
          <div class="max-md:mt-10">
            <a href="/contact"
              ><span class="text-base font-semibold text-white">Contacto</span
              ></a
            >
          </div>
        </div>
      </div>
    </div>
    <div
      class="mt-8 border-t border-gray-800/10 pt-8 md:flex md:items-center md:justify-between"
    >
      <div class="flex gap-x-6 md:order-2 justify-center lg:justify-end">
        <SocialMediaIcons />
      </div>
      <p
        class="mt-8 text-sm/6 text-white md:order-1 md:mt-0 text-center lg:text-left"
      >
        &copy; {year}
        {siteName}. All rights reserved.
      </p>
    </div>
  </div>
</footer>
