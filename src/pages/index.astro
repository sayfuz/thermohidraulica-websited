---
import { Image } from "astro:assets";
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import Button from "~/components/Button.astro";
import Hero from "~/components/Hero.astro";
import Faq from "~/components/Faq.astro";
import Heading from "~/components/Heading.astro";
import Grid from "~/components/Grid.astro";
import GridItem from "~/components/GridItem.astro";

// Images
import tecnicoAire from "~/assets/images/tecnico-aire.jpg";
import ImageHeadingBackground from "~/assets/images/teccnico.jpg";
import ImageOne from "~/assets/images/pexels-leif-bergerson-99376750-9764731.webp";
import ImageTwo from "~/assets/images/pexels-zenzazione-2922140.webp";
---

<Layout pageTitle="Home">
  {/* Main Heading */}
  <Section class:list={"relative"}>
    <Image
      src={ImageHeadingBackground}
      alt="Heading background"
      class:list={"absolute inset-0 w-full h-full object-cover object-bottom"}
    />
    <div class="absolute inset-0 w-full h-full object-cover bg-gray-800/80">
    </div>
    <Container class:list={"relative z-10"}>
      <Heading class:list={"prose-invert max-w-4xl"}>
        <h1 slot="heading-title" class="mb-0 lg:text-7xl text-balance">
          Eficiencia, confort y tecnología en cada sistema de climatización
        </h1>
        <p slot="heading-content">
          Especialistas en mantenimiento, diseño y optimización de sistemas de
          aire acondicionado, ventilación y agua helada.
        </p>
      </Heading>
    </Container>
  </Section>

  {/* Hero */}
  <Section>
    <Container>
      <Hero>
        <div slot="hero-left" class="prose lg:max-w-2xl">
          <h2>
            Climatizamos espacios con soluciones responsables y de alto
            rendimiento
          </h2>
          <p>Tu bienestar y el del planeta, en equilibrio perfecto.</p>

          <Button href="/contact" class:list={"mt-4"}
            >Contáctanos hoy mismo</Button
          >
        </div>
        <div slot="hero-right">
          <Image src={tecnicoAire} alt="Car dealer" />
        </div>
      </Hero>
    </Container>
  </Section>

  {/* Grid */}
  <Section>
    <Container>
      <Grid>
        <GridItem
          image={ImageOne}
          imageAlt="Car dealer"
          span={2}
          link="/cars"
          As="a"
          xl
        >
          <h2>Featured cars</h2>
          <p>
            Discover the ultimate driving experience with our exclusive
            collection of featured cars. Whether you're looking for a sleek
            sports car, a reliable family vehicle, or an eco-friendly hybrid, we
            have something for everyone. Our extensive inventory is carefully
            curated to ensure that you find the perfect match for your lifestyle
            and budget.
          </p>
          <Button
            As="button"
            type="button"
            color="white-outline"
            class:list={"mt-4 group-hover:bg-white/10"}>View all cars</Button
          >
        </GridItem>

        <GridItem image={ImageTwo} imageAlt="Car dealer" link="/cars" As="a">
          <h3>Featured cars</h3>
          <p>
            Discover the ultimate driving experience with our exclusive
            collection of featured cars. Whether you're looking for a sleek
            sports car, a reliable family vehicle, or an eco-friendly hybrid, we
            have something for everyone.
          </p>
          <Button
            As="button"
            type="button"
            color="white-outline"
            class:list={"mt-4 group-hover:bg-white/10"}>View all cars</Button
          >
        </GridItem>

        <GridItem>
          <h3>Featured cars</h3>
          <p>
            Discover the ultimate driving experience with our exclusive
            collection of featured cars. Whether you're looking for a sleek
            sports car, a reliable family vehicle, or an eco-friendly hybrid, we
            have something for everyone.
          </p>
        </GridItem>
      </Grid>
    </Container>
  </Section>

  {/* CTA */}
  <Section class:list={"bg-gradient-to-br from-gray-900 to-gray-700"}>
    <Container>
      <Heading class:list={"mb-0 lg:mb-0 prose-invert text-center mx-auto"}>
        <h2 slot="heading-title">Can't find the ideal car?</h2>

        <p slot="heading-content">
          Our team is here to help you find the perfect car that suits your
          needs and budget. Whether you're looking for a sleek sports car, a
          reliable family vehicle, or an eco-friendly hybrid, we have something
          for everyone.
        </p>

        <Button href="/contact" color="white" class:list={"mt-8"}
          >Contact us</Button
        >
      </Heading>
    </Container>
  </Section>

